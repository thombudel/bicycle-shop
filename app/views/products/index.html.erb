

<% @products.each do |product| %>
<div class="container-fluid cards-row">
<div class="container">
<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="https://1.bp.blogspot.com/-aFQ-W_KTFWQ/V6BdtpSUy6I/AAAAAAAAAH4/xD_U-BYItSsNvk1UGfROqLBzzU1h32oXQCLcB/s320/4-diwali-greeting-cards-by-ajay-acharya.jpg" alt="bike photo">
      <div class="caption">
        <h3><%= product.name %></h3>
        <p class="card-description"><%= product.description %></p>
        <p class="card-description"><strong><%= product.price %></strong></p>
        <%= link_to "View Details", product, class: "btn btn-default" %>
        <%= link_to "Buy Bike", product, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
</div>
<%end%>
